    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Fetch Main from Steam",
            "type": "debugpy",
            "request": "launch",
            "program": "fetch_main_from_steam.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Generate Wiki",
            "type": "debugpy",
            "request": "launch",
            "program": "generate_wiki.py",
            "console": "integratedTerminal",
            "args": [
                "../main",
                "--overwrite",
            ],
            "justMyCode": true
        },
        {
            "name": "Upload Wiki",
            "type": "debugpy",
            "request": "launch",
            "program": "upload_wiki.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--debug",
            ],
        },
        {
            "name": "Upload Wiki (for real)",
            "type": "debugpy",
            "request": "launch",
            "program": "upload_wiki.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--debug",
                "--no-dry-run",
            ],
        },
        {
            "name": "Create missing pages (module)",
            "type": "debugpy",
            "request": "launch",
            "module": "cli_tools.create_missing_pages",
            "console": "integratedTerminal",
            "args": [
                "--debug"
            ],
            "justMyCode": true
        },
        {
            "name": "Cleanup page templates (module)",
            "type": "debugpy",
            "request": "launch",
            "module": "cli_tools.cleanup_page_templates",
            "console": "integratedTerminal",
            "args": [
                "--debug"
            ],
            "justMyCode": true
        },
        {
            "name": "Remove data pages (module)",
            "type": "debugpy",
            "request": "launch",
            "module": "cli_tools.remove_data_pages",
            "console": "integratedTerminal",
            "args": [
                "--debug",
                ".*"
            ],
            "justMyCode": true
        },
    ]
}
